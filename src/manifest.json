{
  "manifest_version": 2,
  "name": "PeerShake",
  "description": "Get the FAIR score and submit a FAIR assessment for any biomedical digital object right from its homepage.",
  "version": "1.1",
  "icons": {
    "16": "/img/icon-16.png",
    "32": "/img/icon-32.png",
    "48": "/img/icon-48.png",
    "96": "/img/icon-96.png",
    "128": "/img/icon-128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],

  "content_scripts": [
		{
			"matches": [
        "https://www.biorxiv.org/content/*"
      ],
			"css": [],
			"js": [
				"popup.min.js"
			]
		}
	]
}